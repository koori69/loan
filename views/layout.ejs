<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title><%= title %> - 乐融</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href="stylesheets/bootstrap-responsive.css" rel="stylesheet">
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">乐融</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li class="active"><a href="/">首页</a></li>
              <% if (!user) { %>
                <li><a href="/login">登录</a></li>
                <!--<li><a href="/reg">注册</a></li>-->
              <% } else { %>
                <li><a>欢迎您，<%= user.name %></a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">资金池 <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="/pool">总量</a></li>
                        <li><a href="/pool_insert">注入</a></li>
                        <li><a href="/pool_withdraw">提取</a></li>
                    </ul>
                </li>
                <li><a href="/detailed">借款明细</a></li>
                <li><a href="/borrower">借款人</a></li>
                <li><a href="/pawn">抵押物</a></li>
                <li><a href="/logout">登出</a></li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div id="container" class="container">
      <% if (success) { %>
        <div class="alert alert-success">
          <%= success %>
        </div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>
      <%- body %>
      <hr />
      <footer>
        <p><a href="http://www.lsq.me/" target="_blank">Powered by iT2afL0rd</a> 2014</p>
      </footer>
    </div>
  </body>
  <script src="/javascripts/jquery-2.1.1.min.js"></script>
  <script src="/javascripts/bootstrap.js"></script>
</html>
